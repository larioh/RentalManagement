@model RentalManagementSystem.Models.Rooms.Rooms

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Rooms</h4>
<hr />
<div class="row">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-4">
                <RadzenDropDown @bind-Value="Model.RentalId" Data="Model.GetProperty" TextProperty="Text" ValueProperty="Value" Name="RentalId" />
                <span asp-validation-for="RentalId" class="text-danger"></span>
                <RadzenTextBox @bind-Value="Model.FloorNo" Name="FloorNo" />
                <span asp-validation-for="FloorNo" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <RadzenTextBox @bind-Value="Model.RoomType" Name="RoomType" />
                <span asp-validation-for="RoomType" class="text-danger"></span>
                <RadzenTextBox @bind-Value="Model.RoomNo" Name="RoomNo" />
                <span asp-validation-for="RoomNo" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <RadzenNumeric @bind-Value="Model.RentCost" Name="RentCost" />
                <span asp-validation-for="RentCost" class="text-danger"></span>
                <RadzenNumeric @bind-Value="Model.Deposit" Name="Deposit" />
                <span asp-validation-for="Deposit" class="text-danger"></span>
                <RadzenButton Text="Create" ButtonStyle="ButtonStyle.Primary" Icon="add_circle" style="float:right" />
            </div>
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
