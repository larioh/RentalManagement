@model RentalManagementSystem.ViewModels.TenantData

@{
    ViewData["Title"] = "Create";
}

<div class="card" style="padding:25px;">
    <RadzenTemplateForm Data="@Model" TItem="RentalManagementSystem.ViewModels.TenantData" Submit="@OnSubmit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-4">
                <RadzenTextBox @bind-Value="Model.Idno" Name="Idno" Placeholder="Idno" Style="width: 100%;" />
                <RadzenRequiredValidator Component="Idno" Text="Idno is required" Style="position: absolute;" />
            </div>
            <div class="col-md-4">
                <RadzenTextBox @bind-Value="Model.Name" Name="Name" Placeholder="Name" Style="width: 100%;" />
                <RadzenRequiredValidator Component="Name" Text="Name is required" Style="position: absolute;" />
            </div>
            <div class="col-md-4">
                <RadzenTextBox @bind-Value="Model.PhoneNo" Name="PhoneNo" Placeholder="PhoneNo" Style="width: 100%;" />
                <RadzenRequiredValidator Component="PhoneNo" Text="PhoneNo is required" Style="position: absolute;" />
            </div>
            <div class="col-md-4">
                <RadzenDropDown @bind-Value="Model.Gender" Name="Gender" Data="@(Model.GetSexCategory.Select(g => new { g.Value, g.Text }))" TextProperty="Text" ValueProperty="Value" Style="width: 100%;" />
                <RadzenRequiredValidator Component="Gender" Text="Gender is required" Style="position: absolute;" />
            </div>
        </div>
        <div class="form-group" style="padding:25px">
            <RadzenButton ButtonType="ButtonType.Submit" Text="Submit" Style="float:right;" Icon="add_circle_outline" />
        </div>
    </RadzenTemplateForm>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
