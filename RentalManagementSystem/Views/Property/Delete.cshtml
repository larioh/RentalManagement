@model RentalManagementSystem.Models.RentalsProperties.RentalProperties

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <RadzenTemplateForm Data="@Model" TItem="RentalManagementSystem.Models.RentalsProperties.RentalProperties" Submit="@OnSubmit">
        <RadzenFieldset>
            <RadzenFieldset Legend="Property Details">
                <RadzenTextBox @bind-Value="Model.Name" Name="Name" Placeholder="Name" Style="width: 100%;" Disabled="true" />
                <RadzenTextBox @bind-Value="Model.Location" Name="Location" Placeholder="Location" Style="width: 100%;" Disabled="true" />
                <RadzenTextBox @bind-Value="Model.Description" Name="Description" Placeholder="Description" Style="width: 100%;" Disabled="true" />
                <RadzenNumeric @bind-Value="Model.FloorLevels" Name="FloorLevels" Placeholder="Floor Levels" Style="width: 100%;" Disabled="true" />
                <RadzenTextBox @bind-Value="Model.CreateDate" Name="CreateDate" Placeholder="Create Date" Style="width: 100%;" Disabled="true" />
            </RadzenFieldset>
            <RadzenButton Text="Delete" ButtonType="Submit" Style="margin-top: 20px;" />
        </RadzenFieldset>
    </RadzenTemplateForm>
</div>

<div>
    <RadzenButton Text="Back to List" Click="@(() => NavigationManager.NavigateTo("ViewRentals"))" />
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@code {
    [Inject]
    protected NavigationManager NavigationManager { get; set; }

    private void OnSubmit()
    {
        // Implement form submission logic here
    }
}
